<div class="ui-panel ui-corner-all" style="width: 400px; margin: 0px auto">

<div class="ui-panel-titlebar ui-widget-header ui-corner-all">
    <span>Iniciar sesi√≥n</span>

</div>
    <h1 align = "center">UPC - Conciertos</h1>
    <div class="ui-panel-body">
      
        <!DOCTYPE html>
        <html>
        <head>
          <title>Conciertos UPC</title>
          <%= stylesheet_link_tag    "application" %>
          
          <%= csrf_meta_tags %>
        </head>
        <body>
          <div id="container">
            <div class="user_nav">
              <% if current_user %>
                Logged in as <%= current_user.email %>.
                <%= link_to "Log out", logout_path %>

              <% else %>

                  <div class="actions">
                    <table align = "center">
                      <tr>
                        <td>
                          <%= button_to "Sign up", signup_path , :class => "ui-button ui-widget ui-state-default", :method => :get %>   
                        </td>
                        <td>
                          <%= button_to "log in", login_path, :class => "ui-button ui-widget ui-state-default", :method => :get %>
                        </td>
                      </tr>
                    </table>  
                  </div>

              <% end %>
            </div>
            <% flash.each do |name, msg| %>
              <%= content_tag :div, msg, :id => "flash_#{name}" %>
            <% end %>
            <%= yield %>
          </div>
        </body>
        </html>

    </div>

</div>
