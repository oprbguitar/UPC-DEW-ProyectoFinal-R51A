<!DOCTYPE html>
<html>
<head>
  <title>Conciertos - UPC</title>
  <%= stylesheet_link_tag    "default", :media => "all" %>
  <%= stylesheet_link_tag    "custom-theme/skin", :media => "all" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
 	<ul  id="menu-bar">
     <li><%= link_to 'Bands', bands_path %></li>
     <li><%= link_to 'Concerts', concerts_path %></li>
     <li><%= link_to 'Locals', locals_path %></li>
     <li><%= link_to 'Disctricts', districts_path %></li>
     <li><%= link_to 'Styles', styles_path %></li>
     <li><%= link_to 'Users', users_path %></li>
  </ul>

  
<%= yield %>

</body>
<div id="user_nav">
  <% if current_user %>
    Signed in as <strong><%= current_user.name %></strong>!
    <%= link_to "Salir", signout_path, id: "sign_out" %>
  <% else %>
    <%= link_to "Conectarse con Facebook", "/auth/facebook", id: "sign_in" %>
  <% end %>
</div>
</html>